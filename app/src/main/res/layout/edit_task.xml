<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:scrollbars="vertical">
    <!--tools:context="com.example.nermina.myapplication.MainActivity"-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollIndicators="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/toolbar_layout"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/name"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />
                <AutoCompleteTextView
                    android:hint="I want to..."
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/editTaskName"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColorLink="@android:color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mybutton"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/date"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />
                <Button
                    android:text="Date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/button_date"
                    android:onClick="showDatePickerDialog"
                    android:elevation="4dp"
                    android:visibility="visible"
                    style="@style/Widget.AppCompat.Button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:background="@drawable/mybutton"
                    android:backgroundTintMode="add"
                    android:clickable="?attr/isLightTheme"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@android:drawable/progress_horizontal"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/time"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"/>
                <Button
                    android:text="Time"
                    android:layout_width="match_parent"
                    android:onClick="showTimePickerDialog"
                    android:layout_height="30dp"
                    android:id="@+id/button_time"
                    android:elevation="4dp"
                    android:visibility="visible"
                    style="@style/Widget.AppCompat.Button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:background="@drawable/mybutton"
                    android:backgroundTintMode="add"
                    android:clickable="?attr/isLightTheme"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@android:drawable/progress_horizontal"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/priority"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/edit_spinner_priority"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:elevation="4dp"
                    android:visibility="visible"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:background="@drawable/mybutton"
                    android:clickable="?attr/isLightTheme"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/status"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/edit_spinner_status"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:elevation="4dp"
                    android:visibility="visible"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:background="@drawable/mybutton"
                    android:clickable="?attr/isLightTheme"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/note"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp" />
                <EditText
                    android:hint="Note"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/edit_textnote"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:fontFamily="serif"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColorLink="@android:color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/mybutton"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:orientation="vertical">
        <!--android:layout_margin="@dimen/fab_margin"-->


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnEditTaskTypeOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/check4"
            android:scaleType="fitCenter"
            />

    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"
        ></android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
